<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_popup_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.Source.S1_MCCPAY.MCCPAY.model.DPopupMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/app_logo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/logo" />

        <TextView
            android:id="@+id/app_version"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:gravity="center"
            android:text="APP V0.00"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/merchant"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:gravity="center"
            android:text="COMPANY ABC"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tprofile"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:gravity="center"
            android:text="MID: XXXXXX    |    TID: XXXX"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/NetworkCarrier"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:gravity="center"
            android:text="CASTLES NETWORK"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/mcc_trans_logo"
        android:layout_width="match_parent"
        android:layout_height="60dp"


        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="170dp"
        android:layout_marginRight="0dp"
        android:clickable="false"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/mcc_menu_title"
        android:layout_width="match_parent"
        android:layout_height="10dp"


        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="228dp"
        android:layout_marginRight="0dp"
        android:background="@color/white"
        android:clickable="false"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/mcc_menu_can"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_gray"
        android:clickable="true"
        android:focusable="true"
        android:text="BACK"
        android:textSize="30sp"
        android:visibility="visible" />


</RelativeLayout>
