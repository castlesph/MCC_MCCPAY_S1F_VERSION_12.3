<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="#DDDFE6"
    android:id="@+id/mainLayout">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/rowConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DDDFE6">

            <ImageView
                android:visibility="gone"
                android:id="@+id/myImageView"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_marginLeft="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/alipay_icon" />

            <TextView
                android:id="@+id/myTextView1"
                android:layout_width="170dp"
                android:layout_height="22dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="tv1"
                android:textSize="12dp"
                android:textColor="@color/blue"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/myImageView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/myTextView2"
                android:layout_width="170dp"
                android:layout_height="26dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="2dp"
                android:text="tv2"
                android:textSize="12dp"
                app:layout_constraintStart_toEndOf="@+id/myImageView"
                app:layout_constraintTop_toBottomOf="@+id/myTextView1" />

            <TextView
                android:id="@+id/myTextView3"
                android:layout_width="170dp"
                android:layout_height="28dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="2dp"
                android:text="tv3"
                android:textSize="12dp"
                app:layout_constraintStart_toEndOf="@+id/myImageView"
                app:layout_constraintTop_toBottomOf="@+id/myTextView2" />


            <TextView
                android:id="@+id/myTextView5"
                android:layout_width="190dp"
                android:layout_height="22dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:gravity="left|center_vertical"
                android:text="tv5"
                android:textSize="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/myTextView1"
                tools:layout_editor_absoluteX="224dp" />

            <TextView
                android:id="@+id/myTextView6"
                android:layout_width="190dp"
                android:layout_height="26dp"
                android:layout_marginBottom="2dp"
                android:gravity="left|center_vertical"
                android:text="tv6"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/myTextView5"
                app:layout_constraintLeft_toRightOf="@+id/myTextView2"
                tools:layout_editor_absoluteX="235dp" />

            <TextView
                android:id="@+id/myTextView7"
                android:layout_width="100dp"
                android:layout_height="28dp"
                android:layout_marginBottom="2dp"
                android:gravity="left|center_vertical"
                android:text="tv7"
                android:textSize="12dp"
                android:visibility="invisible"
                app:layout_constraintTop_toBottomOf="@+id/myTextView6"
                app:layout_constraintLeft_toRightOf="@+id/myTextView3"
                tools:layout_editor_absoluteX="235dp" />

            <TextView
                android:id="@+id/myTextView8"
                android:layout_width="84dp"
                android:layout_height="28dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="3dp"
                android:gravity="right|center_vertical"
                android:text="tv8"
                android:textColor="@color/red"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/myTextView3"
                app:layout_constraintStart_toEndOf="@+id/myTextView7"
                app:layout_constraintTop_toBottomOf="@+id/myTextView6" />



        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>