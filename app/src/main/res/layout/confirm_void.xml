<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.Source.S1_MCCPAY.MCCPAY.Main.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/app_logo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_footer">

        <TextView
            android:id="@+id/textView_txn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/darkblue"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:background="@drawable/shape_confirm">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/msg_01"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:gravity="start|center_vertical"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/msg_detail_01"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="right|end"
                android:gravity="right|center"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16sp"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/msg_02"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:gravity="start|center_vertical"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/msg_detail_02"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_gravity="right|end"
                android:gravity="end|center_vertical"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16sp"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/msg_03"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:gravity="start|center_vertical"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/msg_detail_03"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_gravity="right|end"
                android:gravity="end|center_vertical"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16sp"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/msg_05"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:gravity="start|center_vertical"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/msg_detail_05"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_gravity="right|end"
                android:gravity="end|center_vertical"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16sp"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/msg_06"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:gravity="start|center_vertical"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/msg_detail_06"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_gravity="right|end"
                android:gravity="end|center_vertical"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16sp"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/msg_07"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:gravity="start|center_vertical"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/msg_detail_07"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_gravity="right|end"
                android:gravity="end|center_vertical"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16sp"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/msg_08"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:gravity="start|center_vertical"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/msg_detail_08"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_gravity="right|end"
                android:gravity="end|center_vertical"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16sp"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:background="@color/white">

        <Button
            android:id="@+id/IPT_CancelButton"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shape_gray"
            android:text="CANCEL"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/IPT_OKButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/IPT_OKButton"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_bule_button"
            android:text="OK"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/IPT_CancelButton" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>